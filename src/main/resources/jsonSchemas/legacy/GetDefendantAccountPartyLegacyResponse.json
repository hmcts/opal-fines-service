{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Get Defendant Account Party Legacy Response",
  "properties": {
    "party_id": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "party_type": {
      "type": "string",
      "enum": [
        "Defendant",
        "Parent/Guardian"
      ]
    },
    "debtor_flag": {
      "type": "boolean"
    },
    "organisation_flag": {
      "type": "boolean"
    },
    "party_details": {
      "type": "object",
      "properties": {
        "organisation_name": {
          "type": "string"
        },
        "organisation_aliases": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "properties": {
              "alias_id": {
                "type": "string"
              },
              "sequence_number": {
                "type": "number",
                "minimum": 1,
                "maximum": 5
              },
              "organisation_name": {
                "type": [
                  "string",
                  "null"
                ]
              }
            },
            "required": [
              "alias_id",
              "sequence_number"
            ]
          },
          "maxItems": 5,
          "required": [
            "organisation_name"
          ]
        },
        "title": {
          "type": "string"
        },
        "first_names": {
          "type": "string"
        },
        "surname": {
          "type": "string"
        },
        "date_of_birth": {
          "type": [
            "string",
            "null"
          ],
          "format": "date"
        },
        "age": {
          "type": [
            "string",
            "null"
          ]
        },
        "national_insurance_number": {
          "type": [
            "string",
            "null"
          ]
        },
        "individual_aliases": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "object",
            "properties": {
              "alias_id": {
                "type": "string"
              },
              "sequence_number": {
                "type": "number",
                "minimum": 1,
                "maximum": 5
              },
              "surname": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "forenames": {
                "type": [
                  "string",
                  "null"
                ]
              }
            },
            "required": [
              "alias_id",
              "sequence_number"
            ]
          },
          "maxItems": 5
        }
      }
    },
    "address": {
      "type": "object",
      "properties": {
        "address_line_1": {
          "type": "string"
        },
        "address_line_2": {
          "type": [
            "string",
            "null"
          ]
        },
        "address_line_3": {
          "type": [
            "string",
            "null"
          ]
        },
        "address_line_4": {
          "type": [
            "string",
            "null"
          ]
        },
        "address_line_5": {
          "type": [
            "string",
            "null"
          ]
        },
        "postcode": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "address_line_1"
      ]
    },
    "contact_details": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "primary_email_address": {
          "type": [
            "string",
            "null"
          ],
          "format": "email"
        },
        "secondary_email_address": {
          "type": [
            "string",
            "null"
          ],
          "format": "email"
        },
        "mobile_telephone_number": {
          "type": [
            "string",
            "null"
          ]
        },
        "home_telephone_number": {
          "type": [
            "string",
            "null"
          ]
        },
        "work_telephone_number": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "vehicle_details": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "vehicle_make_and_model": {
          "type": [
            "string",
            "null"
          ]
        },
        "vehicle_registration": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "language_preferences": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "document_language": {
          "type": [
            "string",
            "null"
          ]
        },
        "court_hearing_language": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "employer_details": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "employer_name": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_reference": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_email_address": {
          "type": [
            "string",
            "null"
          ],
          "format": "email"
        },
        "employer_telephone_number": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_address_line_1": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_address_line_2": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_address_line_3": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_address_line_4": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_address_line_5": {
          "type": [
            "string",
            "null"
          ]
        },
        "employer_postcode": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    }
  },
  "required": [
    "party_id",
    "version",
    "party_type",
    "debtor_flag",
    "organisation_flag",
    "party_details",
    "address"
  ],
  "allOf": [
    {
      "if": {
        "properties": {
          "debtor_flag": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "contact_details",
          "vehicle_details",
          "language_preferences",
          "employer_details"
        ],
        "properties": {
          "contact_details": {
            "type": "object"
          },
          "vehicle_details": {
            "type": "object"
          },
          "language_preferences": {
            "type": "object"
          },
          "employer_details": {
            "type": "object"
          }
        }
      },
      "else": {
        "properties": {
          "contact_details": {
            "type": [
              "object",
              "null"
            ]
          },
          "vehicle_details": {
            "type": [
              "object",
              "null"
            ]
          },
          "language_preferences": {
            "type": [
              "object",
              "null"
            ]
          },
          "employer_details": {
            "type": [
              "object",
              "null"
            ]
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "organisation_flag": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "party_details": {
            "required": [
              "organisation_name",
              "organisation_aliases"
            ],
            "properties": {
              "title": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "first_names": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "surname": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "date_of_birth": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "age": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "national_insurance_number": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "individual_aliases": {
                "type": [
                  "array",
                  "null"
                ]
              }
            }
          }
        }
      },
      "else": {
        "properties": {
          "party_details": {
            "required": [
              "title",
              "first_names",
              "surname"
            ],
            "properties": {
              "organisation_name": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "organisation_aliases": {
                "type": [
                  "array",
                  "null"
                ]
              }
            }
          }
        }
      }
    }
  ]
}
