{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Update Defendant Account Legacy Request",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "defendant_account_id": {
      "type": "string"
    },
    "business_unit_id": {
      "type": "string",
      "minLength": 1
    },
    "business_unit_user_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer"
    },
    "comment_and_notes": {
      "$ref": "./common-objects/commentsAndNotesLegacy.json"
    },
    "enforcement_court": {
      "$ref": "./common-objects/courtReferenceLegacy.json"
    },
    "collection_order": {
      "$ref": "./common-objects/collectionOrderLegacy.json"
    },
    "enforcement_override": {
      "$ref": "./common-objects/enforcementOverrideLegacy.json"
    }
  },
  "required": [
    "defendant_account_id",
    "business_unit_id",
    "business_unit_user_id",
    "version"
  ],
  "oneOf": [
    {
      "required": ["comment_and_notes"],
      "not": {
        "anyOf": [
          { "required": ["enforcement_court"] },
          { "required": ["collection_order"] },
          { "required": ["enforcement_override"] }
        ]
      }
    },
    {
      "required": ["enforcement_court"],
      "not": {
        "anyOf": [
          { "required": ["comment_and_notes"] },
          { "required": ["collection_order"] },
          { "required": ["enforcement_override"] }
        ]
      }
    },
    {
      "required": ["collection_order"],
      "not": {
        "anyOf": [
          { "required": ["comment_and_notes"] },
          { "required": ["enforcement_court"] },
          { "required": ["enforcement_override"] }
        ]
      }
    },
    {
      "required": ["enforcement_override"],
      "not": {
        "anyOf": [
          { "required": ["comment_and_notes"] },
          { "required": ["enforcement_court"] },
          { "required": ["collection_order"] }
        ]
      }
    }
  ]
}

