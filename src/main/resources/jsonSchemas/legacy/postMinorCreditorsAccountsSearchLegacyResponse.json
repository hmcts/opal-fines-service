{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opal-fines-service/postMinorCreditorAccountsSearchLegacyResponse.json",
  "type": "object",
  "required": ["count"],
  "properties": {
    "count": {
      "type": "integer",
      "description": "The total number of records identified in the database before truncating the response."
    },
    "creditor_accounts": {
      "type": "array",
      "description": "One or more creditor accounts",
      "minItems": 1,
      "items": { "$ref": "#/$defs/creditor_account" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "creditor_account": {
      "type": "object",
      "description": "Data for a returned creditor account",
      "properties": {
        "creditor_account_id": { "type": "string" },
        "account_number": { "type": "string" },
        "organisation": { "type": "boolean" },
        "organisation_name": { "type": "string" },
        "firstnames": { "type": "string" },
        "surname": { "type": "string" },
        "address_line_1": { "type": "string" },
        "postcode": { "type": "string" },
        "business_unit_name": { "type": "string" },
        "business_unit_id": { "type": "string" },
        "defendant_account_id": { "type": "string" },
        "account_balance": {
          "type": "number",
          "multipleOf": 0.01
        },
        "defendant": { "$ref": "#/$defs/defendant" }
      },
      "required": [
        "creditor_account_id",
        "account_number",
        "organisation",
        "address_line_1",
        "business_unit_name",
        "business_unit_id",
        "defendant_account_id",
        "account_balance",
        "defendant"
      ],
      "oneOf": [
        {
          "required": ["organisation", "organisation_name"],
          "properties": {
            "organisation": { "const": true }
          }
        },
        {
          "required": ["organisation", "firstnames"],
          "properties": {
            "organisation": { "const": false }
          }
        }
      ],
      "additionalProperties": false
    },
    "defendant": {
      "type": "object",
      "description": "Details of the defendant, which can be either an organisation or an individual.",
      "oneOf": [
        {
          "required": ["organisation_name"],
          "properties": {
            "organisation_name": { "type": "string" }
          }
        },
        {
          "required": ["defendant_surname"],
          "properties": {
            "defendant_firstnames": { "type": "string" },
            "defendant_surname": { "type": "string" }
          }
        }
      ],
      "additionalProperties": false
    }
  }
}
