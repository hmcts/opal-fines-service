{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Replace Defendant Account Party Legacy Request",
  "additionalProperties": false,
  "properties": {
    "defendant_account_id": {
      "type": "string",
      "minLength": 1
    },
    "business_unit_id": {
      "type": "string",
      "minLength": 1
    },
    "business_unit_user_id": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "integer"
    },
    "defendant_account_party": {
      "allOf": [
        { "$ref": "./common-objects/defendantAccountPartyLegacy.json" },
        {
          "properties": {
            "party_details": {
              "allOf": [
                { "$ref": "./common-objects/partyDetailsLegacy.json" },
                {
                  "properties": {
                    "individual_details": {
                      "allOf": [
                        { "$ref": "./common-objects/individualDetailsLegacy.json" },
                        {
                          "properties": {
                            "individual_aliases": {
                              "type": "array",
                              "items": {
                                "allOf": [
                                  { "$ref": "./common-objects/individualAliasLegacy.json" },
                                  { "required": ["sequence_number", "surname"] }
                                ]
                              }
                            }
                          }
                        }
                      ]
                    },
                    "organisation_details": {
                      "allOf": [
                        { "$ref": "./common-objects/organisationDetailsLegacy.json" },
                        {
                          "properties": {
                            "organisation_aliases": {
                              "type": "array",
                              "items": {
                                "allOf": [
                                  { "$ref": "./common-objects/organisationAliasLegacy.json" },
                                  { "required": ["sequence_number", "organisation_name"] }
                                ]
                              }
                            }
                          }
                        }
                      ]
                    }
                  }
                }
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "defendant_account_id",
    "business_unit_id",
    "business_unit_user_id",
    "version",
    "defendant_account_party"
  ]
}



