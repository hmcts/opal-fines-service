{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Language Preference",
  "type": ["object", "null"],
  "additionalProperties": false,
  "properties": {
    "language_code": {
      "type": "string",
      "enum": ["CY", "EN"]
    },
    "language_display_name": {
      "type": "string",
      "enum": ["Welsh and English", "English only"]
    }
  },
    "required": ["language_code", "language_display_name"]
}
