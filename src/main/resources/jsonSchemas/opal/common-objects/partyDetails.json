{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Party Details",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "party_id": {
      "type": "string"
    },
    "organisation_flag": {
      "type": "boolean"
    },
    "organisation_details": {
      "$ref": "./organisationDetails.json"
    },
    "individual_details": {
      "$ref": "./individualDetails.json"
    }
  },
  "required": ["party_id", "organisation_flag"],
  "oneOf": [
    {
      "description": "Organisation party",
      "properties": { "organisation_flag": { "const": true } },
      "required": ["organisation_details"],
      "not": { "required": ["individual_details"] }
    },
    {
      "description": "Individual party",
      "properties": { "organisation_flag": { "const": false } },
      "required": ["individual_details"],
      "not": { "required": ["organisation_details"] }
    }
  ]
}
