{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Payment Terms Summary",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "payment_terms_type": {
      "$ref": "./paymentTermsType.json"
    },
    "effective_date": {
      "type": ["string", "null"],
      "format": "date"
    },
    "instalment_period": {
      "$ref": "./instalmentPeriod.json"
    },
    "lump_sum_amount": {
      "type": ["number", "null"],
      "multipleOf": 0.01
    },
    "instalment_amount": {
      "type": ["number", "null"],
      "multipleOf": 0.01
    }
  },
  "required": ["payment_terms_type", "effective_date","instalment_period", "lump_sum_amount", "instalment_amount"]
}
