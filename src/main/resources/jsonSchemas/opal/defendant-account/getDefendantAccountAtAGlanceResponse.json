    "language_preferences": {
      "$ref": "../common-objects/languagePreferences.json"
    },
    "payment_terms": {
      "$ref": "../common-objects/paymentTermsSummary.json"
    },
    "enforcement_status": {
      "$ref": "../common-objects/enforcementStatusSummary.json"
    },
    "comments_and_notes": {
      "$ref": "../common-objects/commentsAndNotes.json"
    }
  },
  "required": [
    "defendant_account_id",
    "account_number",
    "debtor_type",
    "is_youth",
    "party_details",
