{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opal-fines-service/getMinorCreditorAccountAtAGlanceResponse.json",
  "type": "object",
  "required": [
    "party",
    "address",
    "creditor_account_id"
  ],
  "properties": {
    "party": {
      "$ref": "../common-objects/partyDetails.json"
    },
    "address": {
      "$ref": "../common-objects/addressDetails.json"
    },
    "creditor_account_id": {
      "$ref": "../../types/bigint_value.json"
    },
    "defendant": {
      "type": "object",
      "properties": {
        "account_number": {
          "type": [
            "string",
            "null"
          ],
          "minLength": 8,
          "maxLength": 9
        },
        "account_id": {
          "$ref": "../../types/bigint_value.json",
          "type": [
            "number",
            "null"
          ]
        },
        "required": [
          "account_number",
          "account_id"
        ]
      }
    },
    "payment": {
      "type": "object",
      "properties": {
        "is_bacs": {
          "type": "boolean"
        },
        "hold_payment": {
          "type": "boolean"
        }
      },
      "required": [
        "is_bacs",
        "hold_payment"
      ]
    }
  },
  "additionalProperties": false
}
