{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "creditor_account_id",
    "account_number",
    "creditor_account_type",
    "business_unit_summary",
    "party_details",
    "awarded_amount",
    "paid_out_amount",
    "awaiting_payout_amount",
    "outstanding_amount",
    "has_associated_defendant"
  ],
  "properties": {
    "creditor_account_id": {
      "type": "string"
    },
    "account_number": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "creditor_account_type": {
      "$ref": "../common-objects/creditorAccountTypeReference.json"
    },
    "business_unit_summary": {
      "$ref": "../common-objects/businessUnitSummary.json"
    },
    "party_details": {
      "$ref": "../common-objects/partyDetails.json"
    },
    "awarded_amount": {
      "$ref": "../../types/positive_monetary_value.json",
      "description": "Total of all impositions related to that minor creditor."
    },
    "paid_out_amount": {
      "$ref": "../../types/positive_monetary_value.json",
      "description": "Total sum of Creditor Transactions where payment_processed is TRUE and transaction_type is 'PAYMNT'."
    },
    "awaiting_payout_amount": {
      "$ref": "../../types/positive_monetary_value.json",
      "description": "Sum of payment transactions paid by the defendant but not paid out to the minor creditor."
    },
    "outstanding_amount": {
      "$ref": "../../types/monetary_value.json",
      "description": "Imposed amounts minus paid amounts for the associated defendant."
    },
    "has_associated_defendant": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}
