{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "title": "Add Defendant Account Payment Terms Request",
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer"
    },
    "payment_terms_type_code": {
      "type": "string",
      "enum": ["B", "I", "P"]
    },
    "effective_date": {
      "type": ["string", "null"],
      "format": "date"
    },
    "instalment_period": {
      "type": ["string", "null"],
      "enum": ["W", "M", "F"]
    },
    "lump_sum": {
      "type": ["number", "null"],
      "minimum": 0.01,
      "multipleOf": 0.01
    },
    "instalment_amount": {
      "type": ["number", "null"],
      "minimum": 0.01,
      "multipleOf": 0.01
    },
    "days_in_default": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "date_days_in_default_imposed": {
      "type": ["string", "null"],
      "format": "date"
    },
    "reason": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 250
    },
    "last_enforcement": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "generate_payment_terms_change_letter": {
      "type": ["boolean", "null"]
    }
  },
  "required": ["version", "payment_terms_type_code"]
}
